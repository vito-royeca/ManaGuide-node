extends layout.pug
include mixins/_cardArt
include mixins/_cardsSorter
include mixins/_imageCardsRow
include mixins/_listCardsRow
include mixins/_montageCardsRow

block pageTitle
    title Search - #{defaultPageTitle}
block headline
    h1.ui.header Search Results: #{ data.length }
block sorters
    if data.length > 0
        +cardsSorter("search")
block data
    if data.length > 0
        if displayAs == "montage"
            .ui.centered.link.cards
                each card in data
                    +montageCardsRow(card)
        else if displayAs == "image"
            center
                .ui.link.cards
                    each card in data
                        +imageCardsRow(card)
        else if displayAs == "list"
            table.ui.small.table
                thead
                    tr
                        th Set
                        th #
                        th Name
                        th Casting Cost
                        th Type
                        th Rarity
                        th Normal
                        th Foil
                        th &nbsp;
                tbody
                    each card in data
                        +listCardsRow(card)
                tfoot
                    tr
                        th(colspan='9')
        else
            .ui.centered.link.cards
                each card in data
                    +montageCardsRow(card)

