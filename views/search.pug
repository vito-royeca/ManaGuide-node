extends layout.pug
include mixins/_montageCardsRow
include mixins/_imageCardsRow
include mixins/_listCardsRow
include mixins/_cardsSorter

block pageTitle
    title Search - #{defaultPageTitle}
block headline
    h1.ui.header Search Results: #{ data.length }
block sorters
    if data.length > 0
        +cardsSorter("search")
block data
    if data.length > 0
        if displayAs == "montage"
            .ui.centered.link.cards
                each card in data
                    +montageCardsRow(card)
        else if displayAs == "image"
            center
                .ui.link.cards
                    each card in data
                        - var foil = 0
                        - var normal = 0
                        each price in card.prices
                            if price.is_foil
                                - foil = price.market
                            else
                                - normal = price.market
                        .ui.centered.card
                            .image
                                +imageCardsRow(card)
                            .content
                                .description
                                    if foil > 0
                                        span(class="right floated") Foil $#{foil}
                                    else
                                        span(class="right floated") Foil &#8212
                                    if normal > 0
                                        span(class="left floated") Normal $#{normal}
                                    else
                                        span(class="left floated") Normal &#8212
        else if displayAs == "list"
            table.ui.small.table
                thead
                    tr
                        th Set
                        th #
                        th Name
                        th Casting Cost
                        th Type
                        th Rarity
                        th Normal
                        th Foil
                tbody
                    each card in data
                        +listCardsRow(card)
                tfoot
                    tr
                        th(colspan='8')
        else
            .ui.centered.link.cards
                each card in data
                    +montageCardsRow(card)

