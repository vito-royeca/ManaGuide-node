mixin montageTableRow(card)
    .ui.card
        .content
            if card.mana_cost != null
                .right.floated.meta
                    each mana in  manaSymbols(card.mana_cost)
                        if mana == "//"
                            = mana
                        else
                            img(src="/images/mana/" + mana + ".svg" height="16")
            a.header(href="/card/"+card.id+"?web=true&displayAs="+displayAs+"&sortedBy="+sortedBy+"&orderBy="+orderBy) #{card.language.code == 'en' ? card.name : card.printed_name}
            .meta #{card.language.code == 'en' ? card.type_line : card.printed_type_line}
        a.image(href="/card/"+card.id+"?web=true&displayAs="+displayAs+"&sortedBy="+sortedBy+"&orderBy="+orderBy)
            if card.faces.count > 0
                img.ui.rounded.image(src=card.faces[0].image_uris.art_crop)
            else
                img.ui.rounded.image(src=card.image_uris.art_crop)
        .content
            - var foil = -1
            - var normal = -1

            if card.prices.length > 0
                each price in card.prices
                    if price.is_foil
                        - foil = price.market
                    else
                        - foil = price.market
            if normal != -1
                .left.floated.content Normal $#{ normal }
            else
                .left.floated.content Normal &#8212;
            if foil != -1
                .right.floated.content Foil $#{ foil }
            else
                .right.floated.content Foil &#8212;

        .extra.content
            table
                tr
                    td
                        i(class='ss ss-' + card.set.code + ' ss-' + card.rarity.name.toLowerCase() + ' ss-2x')
                    td #{card.set.name}
                tr
                    td(colspan=2) ##{card.collector_number} | #{card.rarity.name} | #{card.language.name}



