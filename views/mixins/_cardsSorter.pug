mixin cardsSorter(action)
    form(action=action method="get" id="select-form" name="select-form")
        .ui.form
            input(type="hidden" value=query name="query" id="query")
            .three.fields
                .field
                    select(name="displayAs" id="displayAs"
                           onchange="invokeSorter('"+ action +"', 'displayAs', this.value)")
                        option(value="") Display As
                        if displayAs == "montage"
                            option(value="montage" selected) Montage
                        else
                            option(value="montage") Montage

                        if displayAs == "image"
                            option(value="image" selected) Image
                        else
                            option(value="image") Image

                        if displayAs == "list"
                            option(value="list" selected) List
                        else
                            option(value="list") List
                .field
                    select(name="sortedBy" id="sortedBy"
                           onchange="invokeSorter('"+ action +"', 'sortedBy', this.value)")
                        option(value="") Sorted By
                        if sortedBy == "set_name"
                            option(value="set_name" selected) Set Name
                        else
                            option(value="set_name") Set Name

                        if sortedBy == "set_release"
                            option(value="set_release" selected) Set Release Date
                        else
                            option(value="set_release") Set Release Date

                        if sortedBy == "collector_number"
                            option(value="collector_number" selected) Collector Number
                        else
                            option(value="collector_number") Collector Number

                        if sortedBy == "name"
                            option(value="name" selected) Name
                        else
                            option(value="name") Name

                        if sortedBy == "cmc"
                            option(value="cmc" selected) Casting Cost
                        else
                            option(value="cmc") Casting Cost

                        if sortedBy == "type"
                            option(value="type" selected) Type
                        else
                            option(value="type") Type

                        if sortedBy == "rarity"
                            option(value="rarity" selected) Rarity
                        else
                            option(value="rarity") Rarity

                .field
                    select(name="orderBy" id="orderBy"
                           onchange="invokeSorter('"+ action +"', 'orderBy', this.value)")
                        option(value="") Order By
                        if orderBy == "asc"
                            option(value="asc" selected) Ascending
                        else
                            option(value="asc") Ascending

                        if orderBy == "desc"
                            option(value="desc" selected) Descending
                        else
                            option(value="desc") Descending