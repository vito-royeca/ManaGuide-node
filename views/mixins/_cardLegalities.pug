mixin cardLegalities(card)
    if card.format_legalities.length > 0
        table.ui.small.table
            thead
                tr
                    th Format
                    th Legality
            tbody
                each legality in card.format_legalities
                    tr
                        td #{legality.format.name}
                        td #{legality.legality.name}
            tfoot
                tr
                    th(colspan='2')
    else
        p &#8212;