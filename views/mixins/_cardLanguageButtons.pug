mixin cardLanguageButtons(card)
    h3
        i(class="language icon")
        .mini.ui.buttons
            if card.language.code == "en"
                .ui.button.disabled EN
            else
                each other_language in card.other_languages
                    if other_language.code == "en"
                        a(href="/card/" + card.set.code + "_" + other_language.code + "_" + card.collector_number)
                            .ui.button(data-position="bottom right") EN
                            +cardArtPopup(card,
                                          ImageTypeEnum.normal,
                                          card.name,
                                          "250px",
                                          other_language.code,
                                          card.collector_number,
                                          card.faces != undefined && card.faces.length > 0)

