mixin imageCardsRow(card, imageType)
    a.image(href="/card/" + card.new_id)
        .card-image
            if card.set.code == "lea"
                img.card.lea.lazyload(style="--width: 250px"
                                      data-sizes="auto"
                                      data-src=cardImageUrl(card, imageType, 0)
                                      alt=card.language.code == "en" ? card.name : card.printed_name)
            else if card.set.code == "cei" || card.set.code == "ced"
                img.card.cei.lazyload(style="--width: 250px"
                                      data-sizes="auto"
                                      data-src=cardImageUrl(card, imageType, 0)
                                      alt=card.language.code == "en" ? card.name : card.printed_name)    
            else
                img.card.lazyload(style="--width: 250px"
                                 data-sizes="auto"
                                 data-src=cardImageUrl(card, imageType, 0)
                                 alt=card.language.code == "en" ? card.name : card.printed_name)
             




