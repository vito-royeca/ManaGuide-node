    body
        .colorlib-loader
        .page
            nav.colorlib-nav(role="navigation")
                .top-menu
                    .container
                        .row
                            if baseUrl != null && baseUrl == "/"
                                .col-md-2 &nbsp;
                            else
                                .col-md-2
                                        a(href="/")
                                            img(src="/images/logo.png")

                            .col-md-10.text-right.menu-1
                                ul
                                    li
                                        if baseUrl != null && baseUrl == "/"
                                            <i class="home icon"></i> Home
                                        else
                                            a(href="/" style="color: #000") <i class="home icon"></i> Home
                                    li
                                        if baseUrl != null && baseUrl == "/sets/"
                                            <i class="ss ss-leg"></i> Sets
                                        else
                                            a(href="/sets" style="color: #000") <i class="ss ss-leg"></i> Sets
                                    li
                                        if baseUrl != null && baseUrl.includes("/rules")
                                            <i class="book icon"></i> Rules
                                        else
                                            a(href="/rules" style="color: #000") <i class="book icon"></i> Rules
                                    li
                                        if baseUrl != null && baseUrl == "/mobile/"
                                            <i class="mobile icon"></i> Mobile App
                                        else
                                            a(href="/mobile" style="color: #000") <i class="mobile icon"></i> Mobile App
                        if (baseUrl == undefined || baseUrl != "/") && baseUrl != "/advancesearch/"
                            .row
                                .col-md-offset-0
                                    form(action="/search" method="get" id="search" name="search")
                                        input(type="hidden" value=displayAs name="displayAs" id="search.displayAs")
                                        input(type="hidden" value=sortedBy name="sortedBy" id="search.sortedBy")
                                        input(type="hidden" value=orderBy name="orderBy" id="search.orderBy")
                                        .ui.fluid.icon.input
                                            input(type="text" value=query name="query" id="query" placeholder="Search for Magic cards...")
                                            i.search.icon
            if (baseUrl == undefined || baseUrl != "/") && baseUrl != "/advancesearch/"
                p &nbsp;
                p &nbsp;

            section#content
                .colorlib-intro
                    .container
                        .row
                            p &nbsp;
                            p &nbsp;
                            block headline
                        .row
                            block sorters
                        .row.main_description
                            block data

            footer#colorlib-footer
                .container
                    .row.row-pb-md
                        .col-md-3.colorlib-widget
                            // Comodo SSL
                            script(language="JavaScript" type="text/javascript").
                                TrustLogo("https://managuideapp.com/images/comodo_secure_seal_113x59_transp.png", "CL1", "none");
                            a.comodoTL(href="https://ssl.comodo.com") Comodo SSL
                        .col-md-3.colorlib-widget
                            h4 Connect With Us
                            p
                                ul.colorlib-social-icons
                                    li
                                        a(href="https://twitter.com/ManaGuideApp")
                                            i.icon-twitter2
                                    li
                                        a(href="https://www.facebook.com/managuide/")
                                            i.icon-facebook2
                                    li
                                        a(href="https://plus.google.com/u/1/106570945096867830873")
                                            i.icon-google-plus2
                        .col-md-3.colorlib-widget
                            h4 Links
                            p
                                ul.colorlib-footer-links
                                    li
                                        a(href="/") <i class="home icon"></i> Home
                                    li
                                        a(href="/sets") <i class="ss ss-leg"></i> Sets
                                    li
                                        a(href="/rules") <i class="book icon"></i> Rules
                                    li
                                        a(href="/mobile") <i class="mobile icon"></i> Mobile App
                        .col-md-3.colorlib-widget
                            h4 Information
                            p
                                ul.colorlib-footer-links
                                    li
                                        a(href="/privacy.html") <i class="briefcase icon"></i>  Privacy Policy
